	<select id="list" parameterType="bvo" resultType="cvo">
		select * from(select rownum rnum,a.* from
		(select cnum, cname, caddr, cxy from center order by cname) a order by rnum)  
    			<where>
    				rnum between #{start} and #{end}
    			<if test="searchType!=null">
    				<choose>
    					<when test="searchType==1">
    					and	cname like '%' || #{searchValue} || '%'
    					</when>
    					<when test="searchType==2">
    					and	caddr like '%' || #{searchValue} || '%'
    					</when>
                       <otherwise></otherwise>                           
    				</choose>
    			</if>
    			</where>
    		
    	
	</select>
	
	<select id="count" parameterType="bvo" resultType="int">
		select count(*) from(select rownum rnum,a.* from
		(select cnum, cname, caddr, cxy from center order by cname) a order by rnum)
		<if test="searchType!=null">
    			<where>
    				<choose>
    					<when test="searchType==1">
    						cname like '%' || #{searchValue} || '%'
    					</when>
    					<when test="searchType==2">
    						caddr like '%' || #{searchValue} || '%'
    					</when>
                       <otherwise></otherwise>                           
    				</choose>
    			</where>
    		</if>
	</select>
</mapper>